{
  "hosting": {
    "public": "frontend/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1/**",
        "run": {
          "serviceId": "eduresolve-backend",
          "region": "asia-southeast2"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
